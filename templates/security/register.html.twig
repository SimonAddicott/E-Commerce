{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<form method="post" action="/register">
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="" name="email" id="emailInput" class="form-control" autocomplete="email" required autofocus>
    
    
    <label for="inputEmail">First name</label>
    <input type="text" value="" name="forename" id="forenameInput" class="form-control"  required autofocus>
    
    
    <label for="inputEmail">Last name</label>
    <input type="text" value="" name="surname" id="surnameInput" class="form-control" required autofocus>
    
    
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="passwordInput" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
