{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ product.name }}</h1>
    
    <h2>Products</h2>
    	<form method='post' action='/basket'>
	    	 <ul>
		        <li><b>{{ product.name }}</b></li>
		        <li><b>&pound;{{ product.price }}</b></li>
		        <li><b>{{ product.quantity }}</b></li>
		    </ul>
		    
		    <input type="hidden" name="product_id" value="{{ product.id }}">
		    
		     <input type="hidden" name="_csrf_token"
           		value="{{ csrf_token('authenticate') }}"
    		 >
    
    
		    <input type="submit" value="Add to cart"/>
		    
		    {% if app.request.query.get("added") is not null  %}
		        <br/>
		    	<p>Item has been added to your basket. <br/>To complete your order, please go to the <a href='/checkout'>checkout.</a></p>
		    {% endif %}
		    
		</form>
		
		
</div>
{% endblock %}
