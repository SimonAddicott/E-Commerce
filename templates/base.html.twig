<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://use.fontawesome.com/32e775a780.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <style>
        	body {
        		font-family: Arial, Helvetica, sans-serif;
        		margin: 0;
  				padding: 0;
        	}
        	.header a {
        		text-decoration: none; 
        		color: white;
        	}
        	.adm { 
        		color: yellow !important;
        		//background-color: red;
        	 }
        	.header a:hover {
        		text-decoration: none; 
        		color: blue;
        	}
        	button { 
        		padding: 10px 20px 10px 20px;
        	}
        </style>
        
        <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Ensures optimal rendering on mobile devices. -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge" /> <!-- Optimal Internet Explorer compatibility -->
        
        <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

		<!-- Optional theme -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css" integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous">

		<!-- Latest compiled and minified JavaScript -->
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
    </head>
    <body>
    	<div class='header' style="background-color: #8fb3a7; padding: 30px 10px 50px 10px; text-align: center; color: white;">
    		
    		<div style='float: left; width: auto;'>
    		
	    		
	    		<a href='/'>Home <i class="fa-solid fa-house"></i></a> &nbsp;
	    		<a href='/product'>Product <i class="fa-solid fa-list"></i></a>&nbsp;
	    		{% if is_granted('ROLE_ADMIN') %}
	    			<a href='/admin' class='adm'>Admin Control <i class="fa-solid fa-toolbox"></i></a>&nbsp;
	    		{% endif %}
    		
    		</div>
    		
    		
    		
    		<div style='float: right;width: auto;'>
    		
    			{% if app.session.get('basket') is empty %}
	    			<a href='/checkout'>Checkout <i class="fas fa-shopping-basket"></i></a>&nbsp;
	    		{% else %}
	    			
	    			<a href='/checkout'>Checkout ( {{ app.session.get('basket')['total'] }} ) <i class="fas fa-shopping-basket"></i></a>&nbsp;
	    		{% endif %}
	    		<a href='/account'>My Account <i class="fa-solid fa-user"></i></a>&nbsp;
	    		
	    		{% if is_granted('ROLE_USER') %}
	    		<a href='/logout'>Logout <i class="fa-solid fa-right-from-bracket"></i></a>&nbsp;
	    		{% else %}
	    		<a href='/login'>Login <i class="fa-solid fa-right-to-bracket"></i></a>&nbsp;
	    		{% endif %}
    		
    		</div>
    	</div>
    	
        {% block body %}{% endblock %}
    </body>
</html>
